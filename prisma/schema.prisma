generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          Int       @id @default(autoincrement())
  name        String?
  username    String    @unique
  password    String
  type        AdminType
  createtAt   DateTime  @default(now())
  permissions Json?
  provider    Provider?
}

model Provider {
  id             Int              @id @default(autoincrement())
  name           String
  phone          String?
  address        String?
  adminId        Int?             @unique
  createtAt      DateTime         @default(now())
  active         Boolean          @default(true)
  walletAmount   Float            @default(0)
  roles          Json?
  archive        Archive[]
  cards          Card[]
  customPrice    CustomPrice[]
  payments       Payment[]
  admin          Admin?           @relation(fields: [adminId], references: [id])
  providerWallet ProviderWallet[]
  sellers        Seller[]
  stock          Stock[]
  wallets        Wallet[]
}

model ProviderWallet {
  id         Int      @id @default(autoincrement())
  amount     Float    @default(0)
  date       DateTime @default(now())
  createtAt  DateTime @default(now())
  providerId Int
  provider   Provider @relation(fields: [providerId], references: [id])
}

model Seller {
  id            Int       @id @default(autoincrement())
  name          String
  username      String    @unique
  password      String
  address       String?
  phone         String?
  providerId    Int
  walletAmount  Int       @default(0)
  paymentAmount Int       @default(0)
  isHajji       Boolean   @default(false)
  createtAt     DateTime  @default(now())
  active        Boolean   @default(true)
  holdAt        DateTime?
  holdId        String?   @unique
  note          String?
  device        String?
  otpCode       String?
  otpUpdateAt   DateTime?
  payments      Payment[]
  provider      Provider  @relation(fields: [providerId], references: [id])
  stock         Stock[]
  wallet        Wallet[]
}

model Wallet {
  id         Int         @id @default(autoincrement())
  amount     Float
  date       DateTime    @default(now())
  createtAt  DateTime    @default(now())
  sellerId   Int
  providerId Int?
  from       FromWallet  @default(PROVIDER)
  type       PaymentType @default(PAYMENT)
  holdId     String?     @unique
  note       String?
  Provider   Provider?   @relation(fields: [providerId], references: [id])
  seller     Seller      @relation(fields: [sellerId], references: [id])
}

model Payment {
  id             Int       @id @default(autoincrement())
  companyCardID  Int
  providerCardID Int
  price          Float
  qty            Int
  createtAt      DateTime  @default(now())
  sellerId       Int?
  item           Json?
  providerId     Int?
  activeBy       Json?
  companyPrice   Float?
  localCard      Json?
  note           String?
  holdId         String?   @unique
  provider       Provider? @relation(fields: [providerId], references: [id])
  seller         Seller?   @relation(fields: [sellerId], references: [id])
}

model Card {
  id           Int       @id @default(autoincrement())
  price        Float
  companyPrice Float
  providerId   Int?
  cardTypeId   Int
  createtAt    DateTime  @default(now())
  active       Boolean   @default(true)
  sellerPrice  Float     @default(0)
  cardType     CardType  @relation(fields: [cardTypeId], references: [id])
  provider     Provider? @relation(fields: [providerId], references: [id])
}

model CardType {
  id            Int       @id @default(autoincrement())
  image         String
  name          String
  companyCardID Int
  createtAt     DateTime  @default(now())
  active        Boolean   @default(true)
  categoryId    Int?
  cards         Card[]
  category      Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int        @id @default(autoincrement())
  image     String?
  title     String
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())
  priority  Int        @default(0)
  cardTypes CardType[]
  plans     Plan[]
}

model Plan {
  id          Int           @id @default(autoincrement())
  title       String
  image       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  active      Boolean       @default(true)
  hidden      Boolean       @default(false)
  categoryId  Int?
  archive     Archive[]
  customPrice CustomPrice[]
  category    Category?     @relation(fields: [categoryId], references: [id])
  stock       Stock[]
}

model CustomPrice {
  id           Int       @id @default(autoincrement())
  planId       Int?
  providerId   Int?
  price        Float     @default(0)
  sellerPrice  Float     @default(0)
  companyPrice Float     @default(0)
  active       Boolean   @default(true)
  plan         Plan?     @relation(fields: [planId], references: [id])
  provider     Provider? @relation(fields: [providerId], references: [id])
}

model Stock {
  id         Int        @id @default(autoincrement())
  serial     String     @unique
  code       String     @unique
  active     Boolean    @default(true)
  createdAt  DateTime   @default(now())
  hold_id    String?
  hold_at    DateTime?
  status     CodeStatus @default(Ready)
  archiveId  Int?
  sold_at    DateTime?
  planId     Int?
  providerId Int?
  sellerId   Int?
  isOld      Boolean    @default(false)
  archive    Archive?   @relation(fields: [archiveId], references: [id])
  plan       Plan?      @relation(fields: [planId], references: [id])
  provider   Provider?  @relation(fields: [providerId], references: [id])
  seller     Seller?    @relation(fields: [sellerId], references: [id])
}

model Archive {
  id             Int       @id @default(autoincrement())
  group_title    String
  qty            Int?
  reciption_date DateTime?
  note           String?
  active         Boolean   @default(true)
  providerId     Int?
  createtAt      DateTime  @default(now())
  planId         Int?
  plan           Plan?     @relation(fields: [planId], references: [id])
  provider       Provider? @relation(fields: [providerId], references: [id])
  stock          Stock[]
}

enum CodeStatus {
  Ready
  Error
  Hold
  Used
  Recived
  Sold
}

enum AdminType {
  ADMIN
  PROVIDER
  AGENT
}

enum FromWallet {
  PROVIDER
  AGENT
}

enum PaymentType {
  PAYMENT
  REFUND
}
